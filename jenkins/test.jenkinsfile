pipeline {
  agent { node { label 'ruby' } }
  stages {
    stage('Bundler') {
      steps {
        sh '''
          bundle install
        '''
      }
    }
    stage('RuboCop') {
      steps {
        sh 'rake rubocop:lint'
      }
    }
    stage('RSpec') {
      steps {
        sh 'rake rspec:test'
      }
      post {
        success {
          publishHTML([allowMissing: false, alwaysLinkToLastBuild: true,
            keepAll: true, reportDir: 'coverage/rcov', reportFiles: 'index.html',
            reportName: 'RCov Report', reportTitles: ''])
        }
      }
    }
  }
}
