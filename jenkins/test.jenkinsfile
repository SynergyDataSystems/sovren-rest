pipeline {
  agent { node { label 'ruby' } }
  stages {
    stage('Checkout') {
      steps {
        git credentialsId: 'bigbuilder-ssh', url: 'git@github.com:SynergyDataSystems/sovren-rest.git'
      }
    }
    stage('Setup') {
      steps {
        sh '''
          bundle install
        '''
      }
    }
    stage('RuboCop') {
      steps {
        sh 'rake rubocop'
      }
    }
    stage('RSpec') {
      steps {
        sh 'rake'
      }
    }
  }
}